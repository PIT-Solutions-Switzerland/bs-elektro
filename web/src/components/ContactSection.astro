---
import { urlFor } from '../lib/sanity'

interface ContactPerson {
  name: string
  image: any
  phone: string
  email: string
}

interface Props {
  label?: string
  title?: string
  contactPeople: ContactPerson[]
}

const { label, title, contactPeople } = Astro.props
---

<section id="contact" class="contact">
  <div class="contact__inner">
    {label && <p class="contact__label">{label}</p>}
    {title && <h2 class="contact__title">{title}</h2>}
    <div class="contact__grid">
      {contactPeople.map((person) => (
        <article class="contact__card">
          <img
            class="contact__card-image"
            src={urlFor(person.image).width(400).height(400).url()}
            alt={person.name}
          />
          <div class="contact__card-content">
            <h3 class="contact__card-name">{person.name}</h3>
            <a href={`tel:${person.phone.replace(/\s/g, '')}`} class="contact__card-link">
              {person.phone}
            </a>
            <a href={`mailto:${person.email}`} class="contact__card-link">
              {person.email}
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 80px var(--page-padding);
    background: var(--color-gray-100);
  }
  .contact__inner {
    max-width: var(--max-width);
    margin: 0 auto;
  }
  .contact__label {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-green);
    margin: 0 0 16px;
  }
  .contact__title {
    font-family: var(--font-display);
    font-size: 56px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 0 0 48px;
  }
  .contact__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2px;
    background: var(--color-gray-200);
    max-width: 900px;
  }
  .contact__card {
    background: var(--color-white);
    display: grid;
    grid-template-columns: 160px 1fr;
  }
  .contact__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .contact__card-content {
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .contact__card-name {
    margin: 0 0 16px;
    font-size: 20px;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  .contact__card-link {
    display: block;
    text-decoration: none;
    font-size: 15px;
    color: var(--color-black);
    transition: color var(--transition-fast);
    margin: 4px 0;
  }
  .contact__card-link:hover {
    color: var(--color-green);
  }

  @media (max-width: 1024px) {
    .contact {
      padding: 60px var(--page-padding-tablet);
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding: 48px var(--page-padding-mobile);
    }
    .contact__title {
      font-size: 40px;
    }
    .contact__grid {
      grid-template-columns: 1fr;
    }
    .contact__card {
      grid-template-columns: 1fr;
    }
    .contact__card-image {
      height: 200px;
    }
  }
</style>
