---
interface NavItem {
  label: string
  href: string
}

interface FooterLink {
  label: string
  href: string
}

interface Props {
  navItems: NavItem[]
  footerLinks: FooterLink[]
}

const { navItems, footerLinks } = Astro.props
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__grid">
      {navItems.length > 0 && (
        <nav aria-label="Footer-Navigation">
          <h2 class="footer__nav-title">Navigation</h2>
          {navItems.map((item) => (
            <a href={item.href} class="footer__nav-link">{item.label}</a>
          ))}
        </nav>
      )}
      <address class="footer__address">
        <p class="footer__company-name">Baumgartner &amp; Stillhard Elektro AG</p>
        <p>Holzwiesstrasse 35<br />8645 Jona</p>
      </address>
    </div>
    <div class="footer__socket">
      <p>&copy; Baumgartner &amp; Stillhard Elektro AG {new Date().getFullYear()}</p>
      {footerLinks.length > 0 && (
        <div class="footer__socket-links">
          {footerLinks.map((link) => (
            <a href={link.href} class="footer__socket-link">{link.label}</a>
          ))}
        </div>
      )}
    </div>
  </div>
</footer>
